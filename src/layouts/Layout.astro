---
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Find detailed information about each Pokemon, including statistics, abilities, and more. Get ready to catch them all!"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions fallback="none" />
	</head>
	<body class="min-h-screen">
		<header
			class="bg-zinc-800 text-white flex justify-center"
			transition:persist
		>
			<a href="/"
				><img
					class="hover:animate-pulse w-60 p-10"
					src="/pokemon-logo.png"
					alt="Pokedex"
				/></a
			>
		</header>
		<slot />
		<footer
			class="bg-zinc-800 w-full h-14 sticky top-[100vh]"
			transition:persist
		>
		</footer>
		<style is:global>
			html {
				font-family: "Flexo", system-ui, sans-serif;
			}

			@font-face {
				font-family: "Flexo";
				src: url("/fonts/Flexo-Black.woff2") format("woff2");
				font-weight: 900;
				font-style: normal;
			}

			@font-face {
				font-family: "Flexo";
				src: url("/fonts/Flexo-Bold.woff2") format("woff2");
				font-weight: bold;
				font-style: normal;
			}

			@font-face {
				font-family: "Flexo";
				src: url("/fonts/Flexo-Demi.woff2") format("woff2");
				font-weight: 600;
				font-style: normal;
			}

			@font-face {
				font-family: "Flexo";
				src: url("/fonts/Flexo-Heavy.woff2") format("woff2");
				font-weight: 900;
				font-style: normal;
			}

			@font-face {
				font-family: "Flexo";
				src: url("/fonts/Flexo-Light.woff2") format("woff2");
				font-weight: 300;
				font-style: normal;
			}

			@font-face {
				font-family: "Flexo";
				src: url("/fonts/Flexo-Medium.woff2") format("woff2");
				font-weight: 500;
				font-style: normal;
			}

			@font-face {
				font-family: "Flexo";
				src: url("/fonts/Flexo-Regular.woff2") format("woff2");
				font-weight: normal;
				font-style: normal;
			}

			@font-face {
				font-family: "Flexo";
				src: url("/fonts/Flexo-Thin.woff2") format("woff2");
				font-weight: 100;
				font-style: normal;
			}

			body {
				background: #fff url("/container_bg.png");
			}
		</style>
	</body>
</html>
